
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "AnalyzeIt";
}

@section AnalyzeIt {
    <div class="section">
        <div class="getCenterDiv">
            <h1 class="text-center">AnalyzeIt</h1>
            <h3>Web-application based on Microsoft cognitive services</h3>

            <a href="#Chooser" class="btn btn-primary">Get Started Now</a>
        </div>
    </div>
}


@section Chooser {

    <div class="section">
        <div class="card">
            <div class="card-body">
                <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <div style="text-align:center; width: 18rem;" class="card">
                                        <a href="#FaceDetect"><img class="card-img-top" src="~/Content/img/FaceDetection.png"></a>
                                        <div class="card-body">
                                            <h5 class="card-title">Face Detection</h5>
                                            <p class="card-text">Some quick way to detect faces on image and get information like age, gender, smile, glasses.</p>
                                            <a href="#FaceDetect" class="btn btn-primary">Try Face Detection</a>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-sm">
                                    <div style="text-align:center; width: 18rem;" class="card">
                                        <a href="#EmotionExplorer"><img class="card-img-top" src="~/Content/img/EmotionExplorer.png"></a>
                                        <div class="card-body">
                                            <h5 class="card-title">Emotion Explorer</h5>
                                            <p class="card-text">Allows you get full information about eight default emotions by uploaded image.</p>
                                            <a href="#EmotionExplorer" class="btn btn-primary">Try Emotion Explorer</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div style="text-align:center; width: 18rem;" class="card">
                                        <a href="#ImageAnalyzer"><img class="card-img-top" src="~/Content/img/ImageAnalyze.png"></a>
                                        <div class="card-body">
                                            <h5 class="card-title">Image Analyzer</h5>
                                            <p class="card-text">Present analyzation in different parameters as tags, description, image format etc.</p>
                                            <a href="#ImageAnalyzer" class="btn btn-primary">Try Image Analyzer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
}

@section FaceDetect {
<div class="section">
    <div class="card">
        <div class="card-body">
            <div class="ng-cloak" ng-controller="faceDetectionCtrl">

                <div class="row">
                    <div class="col">
                        FACE DETECT
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        SELECT QUERY FACE
                    </div>
                    <div class="col">
                        Detect Result
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        <form class="form-inline" novalidate name="f1">
                            <input type="text" class="form-control" name="source" id="urlInput" placeholder="Image Url">

                            <button type="submit" class="btn btn-secondary" onclick="angular.element(document.querySelector('#urlInput')).scope().selectCandidateFileforUpload(document.querySelector('#urlInput'))">Upload</button>


                            <label class="btn btn-primary">
                                Browse <input id="fileInput" style="display: none;" type="file" name="source" accept="image/*" onchange="angular.element(this).scope().selectCandidateFileforUpload(this)" required>
                            </label>
                        </form>
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        <div class="facePreviewContainer">
                            <div class="facePreview_thumb_big" id="faceCanvas"></div>
                        </div>

                    </div>
                    <div class="col">
                        <div  class="facePreview_thumb_small">
                            <div ng-repeat="item in DetectedFaces">
                             
                                            <img ng-src="{{item.FilePath}}" width="100" />
                                        
                                            <ul>
                                                <li>Age: {{item.Age}}</li>
                                                <li>Gender: {{item.Gender}}</li>
                                                <li>{{item.IsSmiling}}</li>
                                                <li>{{item.Glasses}}</li>
                                            </ul>
                                    </div>
                            </div>
                     </div>



                </div>
            </div>
        </div>
    </div>
</div>
}

@section EmotionExplorer{
<div class="section">
    <div class="card">
        <div class="card-body">
            <div class="ng-cloak" ng-controller="emotionExplorerCtrl">



                <div class="row">
                    <div class="col">
                        EMOTION EXPLORER
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        SELECT QUERY FACE
                    </div>
                    <div class="col">
                        Emotion Result
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        <form class="form-inline" novalidate name="f1">
                            <input type="text" class="form-control" name="source" id="urlInputEmotion" placeholder="Image Url">

                            <button type="submit" class="btn btn-secondary" onclick="angular.element(document.querySelector('#urlInputEmotion')).scope().selectCandidateFileforUploadEmotion(document.querySelector('#urlInputEmotion'))">Upload</button>


                            <label class="btn btn-primary">
                                Browse <input id="fileInputEmotion" style="display: none;" type="file" name="source" accept="image/*" onchange="angular.element(this).scope().selectCandidateFileforUploadEmotion(this)" required>
