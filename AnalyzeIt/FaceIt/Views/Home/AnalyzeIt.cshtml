@section ImageAnalyzer{
    <div class="section">
    <div class="card">
        <div class="card-body">
            <div class="ng-cloak" ng-controller="imageAnalyzerExplorerCtrl">

                  
                
            <div class="row">
                <div class="col">
                    Image Analyze
                </div>
                <div class="w-100"></div>
                <div class="col">
                    SELECT QUERY FACE
                </div>
                <div class="col">
                    Analyze Result
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <form class="form-inline" novalidate name="f1">
                        <input type="text" class="form-control" name="source" id="urlInputimageAnalyze" placeholder="Image Url">

                        <button type="submit" class="btn btn-secondary" onclick="angular.element(document.querySelector('#urlInputimageAnalyze')).scope().selectCandidateFileforUploadimageAnalyze(document.querySelector('#urlInputimageAnalyze'))">Upload</button>


                        <label class="btn btn-primary">
                            Browse <input id="fileInputimageAnalyze" style="display: none;" type="file" name="source" accept="image/*" onchange="angular.element(this).scope().selectCandidateFileforUploadimageAnalyze(this)" required>
                        </label>
                    </form>
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <div class="facePreviewContainer">
                        <div class="facePreview_thumb_big" id="faceCanvasimageAnalyze"></div>
                    </div>
                </div>
                <div class="col">
                    <div class="col" style="display: table; overflow: scroll;">
                        <table id="tImAn"class="imageAnalyzerTableInfo">
                            <thead>
                                <tr>
                                    <th style="width: 20%">Parameters</th>
                                    <th>Values</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ImageInfo.description}}</td>
                                </tr>
                                <tr>
                                    <th>Tags</th>
                                    <td>{{ImageInfo.tags}}</td>
                                </tr>
                                <tr>
                                    <th>Image Format</th>
                                    <td>  {{ImageInfo.format}}</td>
                                </tr>
                                <tr>
                                    <th>Image Dimensions</th>
                                    <td> {{ImageInfo.imageSize}}</td>
                                </tr>
                                <tr>
                                    <th>Accent Color</th>
                                    <td> <div id="accentColor" class="color-square"></div> {{ImageInfo.accentColor}} </td>
                                </tr>
                                @*<tr>
                        <th>Dominant Foreground Color</th>
                        <td> <div id="dominantForColor" class="color-square"></div> #{{JsonResponse.color.dominantColorForeground}} </td>
                    </tr>
                    <tr>
                        <th>Dominant Background Color</th>
                        <td> <div id="dominantBackColor" class="color-square"></div> #{{JsonResponse.color.dominantColorBackground}} </td>
                    </tr>*@
                            </tbody>
                        </table>
                    </div>
                    
            </div>


              </div>  <!--CLoak-->
        </div>
    </div>
</div>
        </div>
}



