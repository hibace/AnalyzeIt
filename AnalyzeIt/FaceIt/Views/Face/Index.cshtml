
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "AnalyzeIt";
}

@section AnalyzeIt {
    <div class="section">
        <div class="getCenterDiv">
            <h1 class="text-center">AnalyzeIt</h1>
            <h3>Web-application based on Microsoft cognitive services</h3>

            <a href="#Chooser" class="btn btn-primary">Get Started Now</a>
        </div>
    </div>
}


@section Chooser {
    <div class="section">
        <div class="card">
            <div class="card-body">
                <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <div style="text-align:center; width: 18rem;" class="card">
                                        <a href="#FaceDetect"><img class="card-img-top" src="~/Content/img/FaceDetection.png"></a>
                                        <div class="card-body">
                                            <h5 class="card-title">Face Detection</h5>
                                            <p class="card-text">Some quick way to detect faces on image and get information like age, gender, smile, glasses.</p>
                                            <a href="#FaceDetect" class="btn btn-primary">Try Face Detection</a>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-sm">
                                    <div style="text-align:center; width: 18rem;" class="card">
                                        <a href="#EmotionExplorer"><img class="card-img-top" src="~/Content/img/EmotionExplorer.png"></a>
                                        <div class="card-body">
                                            <h5 class="card-title">Emotion Explorer</h5>
                                            <p class="card-text">Allows you get full information about eight default emotions by uploaded image.</p>
                                            <a href="#EmotionExplorer" class="btn btn-primary">Try Emotion Explorer</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div style="text-align:center; width: 18rem;" class="card">
                                        <a href="#ImageAnalyzer"><img class="card-img-top" src="~/Content/img/ImageAnalyze.png"></a>
                                        <div class="card-body">
                                            <h5 class="card-title">Image Analyzer</h5>
                                            <p class="card-text">Present analyzation in different parameters as tags, description, image format etc.</p>
                                            <a href="#ImageAnalyzer" class="btn btn-primary">Try Image Analyzer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
}

@section FaceDetect {
<div class="section fp-scrollable">
    <div class="card">
        <div class="card-body">
            <div class="ng-cloak" ng-controller="faceDetectionCtrl">

                <div class="row">
                        <div class="headerFaceDetectCenterDiv card-body" style="text-align:center"><h3>FACE DETECT</h3></div>
                    <div class="w-100"></div>
                    <div class="col lead" style="padding:10px;">
                        Select image to upload
                    </div>
                    <div class="col lead" style="padding:10px;">
                        Result
                    </div>
                    <div class="w-100"></div>
                    <div class="col" style="padding:10px;">
                        <form class="form-inline" novalidate name="f1">

                            <input type="text" class="form-control" style="width: 280px;"  name="source" id="urlInput" placeholder="Image Url">

                            <button type="submit" class="btn btn-success" style="margin-right: 5px;" onclick="angular.element(document.querySelector('#urlInput')).scope().selectCandidateFileforUpload(document.querySelector('#urlInput'))">Upload</button>


                            <label class="btn btn-primary" style="margin-right: 5px;">
                                Browse <input id="fileInput" style="display: none;" type="file" name="source" accept="image/*" onchange="angular.element(this).scope().selectCandidateFileforUpload(this)" required>
                            </label>

                            <button type="submit" class="btn btn-dark" ng-click="snapByCam()"style="margin-right: 5px;">Webcam</button>
                        </form>
                    </div>
                    <div class="w-100"></div>
                    <div class="col" style="padding:10px;">
                        <div class="facePreviewContainer">
                            <div class="facePreview_thumb_big" id="faceCanvas"></div>
                            <div class="webCamPreview">
                                <video id="video" style="display: none;" width="450px" height="337.5px"></video>
                                <button style="display: none;"  class="btn btn-light" id="takePhoto">Take Photo</button>
                            </div>
                            <canvas id="canvas" style="display: none;" width="450px" height="337.5px"></canvas>
                            <img id="photo" style="display: none;"/>
                            
                        </div>

                    </div>
                    <div class="col" style="padding:10px;">
                        <div id="myScrollDivFD" class="facePreview_thumb_small ">
                          
                         </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@section EmotionExplorer{
<div class="section">
    <div class="card">
        <div class="card-body">
            <div class="ng-cloak" ng-controller="emotionExplorerCtrl">
                <div class="row">
                    <div class="headerFaceDetectCenterDiv card-body" style="text-align:center"><h3>EMOTION EXPLORER</h3></div>
                    <div class="w-100"></div>
                    <div class="col-5 lead" style="padding:10px;">
                        Select image to upload
                    </div>
                    <div class="col-auto lead" style="padding:10px;">
                        Result
                    </div>
                    <div class="w-100"></div>
                    <div class="col" style="padding:10px;">
                        <form class="form-inline" novalidate name="f1">
                            <input type="text" class="form-control" style="width: 280px;" name="source" id="urlInputEmotion" placeholder="Image Url">

                            <button type="submit" class="btn btn-success" style="margin-right: 5px;" onclick="angular.element(document.querySelector('#urlInputEmotion')).scope().selectCandidateFileforUploadEmotion(document.querySelector('#urlInputEmotion'))">Upload</button>


                            <label class="btn btn-primary" style="margin-right: 5px;">
                                Browse <input id="fileInputEmotion" style="display: none;" type="file" name="source" accept="image/*" onchange="angular.element(this).scope().selectCandidateFileforUploadEmotion(this)" required>
                            </label>

                            <button type="submit" class="btn btn-dark" ng-click="snapByCamEm()" style="margin-right: 5px;">Webcam</button>
                        </form>
                    </div>
                    <div class="w-100"></div>
                    <div class="col-5" style="padding-top: 40px;">
                        <div class="facePreviewContainer">
                            <div class="facePreview_thumb_big" id="faceCanvasEmotion"></div>
                            <div class="webCamPreview">
                                <video id="videoEm" style="display: none;" width="450px" height="337.5px"></video>
                                <button style="display: none;" class="btn btn-light" id="takePhotoEm">Take Photo</button>
                            </div>
                            <canvas id="canvasEm" style="display: none;" width="450px" height="337.5px"></canvas>
                            <img id="photoEm" style="display: none;" />
                        </div>
                    </div>
                    <div class="col-auto">
                        
                            <canvas id="emotionChart" width="800vw"></canvas>
                        
                        </div>

                    </div>

             </div>
        </div>
    </div>
</div>
}

@section ImageAnalyzer{
    <div class="section">
    <div class="card">
        <div class="card-body">
            <div class="ng-cloak" ng-controller="imageAnalyzerExplorerCtrl">

                  
                
            <div class="row">
                <div class="col">
                    <div class="headerFaceDetectCenterDiv card-body" style="text-align:center"><h3>IMAGE ANALYZER</h3></div>
                </div>
                <div class="w-100"></div>
                <div class="col lead" style="padding:10px;">
                    Select image to upload
                </div>
                <div class="col lead" style="padding:10px;">
                    Result
                </div>
                <div class="w-100"></div>
                <div class="col" style="padding:10px;">
                    <form class="form-inline" novalidate name="f1">
                        <input type="text"  style="width: 280px;" class="form-control" name="source" id="urlInputimageAnalyze" placeholder="Image Url">

                        <button type="submit" class="btn btn-success"  style="margin-right: 5px;" onclick="angular.element(document.querySelector('#urlInputimageAnalyze')).scope().selectCandidateFileforUploadimageAnalyze(document.querySelector('#urlInputimageAnalyze'))">Upload</button>


                        <label class="btn btn-primary" style="margin-right: 5px;">
                            Browse <input id="fileInputimageAnalyze" style="display: none;" type="file" name="source" accept="image/*" onchange="angular.element(this).scope().selectCandidateFileforUploadimageAnalyze(this)" required>
                        </label>

                        <button type="submit" class="btn btn-dark" ng-click="snapByCamAnalyzer()" style="margin-right: 5px;">Webcam</button>
                    </form>
                </div>
                <div class="w-100"></div>
                <div class="col" style="padding:10px;">
                    <div class="facePreviewContainer">
                        <div class="facePreview_thumb_big" id="faceCanvasimageAnalyze"></div>
                        <div class="webCamPreview">
                            <video id="videoIa" style="display: none;" width="450px" height="337.5px"></video>
                            <button style="display: none;" class="btn btn-light" id="takePhotoIa">Take Photo</button>
                        </div>
                        <canvas id="canvasIa" style="display: none;" width="450px" height="337.5px"></canvas>
                        <img id="photoIa" style="display: none;" />
                    </div>
                </div>
                <div class="col">
                    <div class="col" style="display: table; overflow: scroll;">
                        <table id="tImAn"class="imageAnalyzerTableInfo">
                            <thead>
                                <tr>
                                    <th style="width: 20%">Parameters</th>
                                    <th>Values</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ImageInfo.description}}</td>
                                </tr>
                                <tr>
                                    <th>Tags</th>
                                    <td>{{ImageInfo.tags}}</td>
                                </tr>
                                <tr>
                                    <th>Image Format</th>
                                    <td>  {{ImageInfo.format}}</td>
                                </tr>
                                <tr>
                                    <th>Image Dimensions</th>
                                    <td> {{ImageInfo.imageSize}}</td>
                                </tr>
                                <tr>
                                    <th>Accent Color</th>
                                    <td> <div id="accentColor" class="color-square"></div> {{ImageInfo.accentColor}} </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
            </div>


              </div>  <!--CLoak-->
        </div>
    </div>
</div>
        </div>
}



